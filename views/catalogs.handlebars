                    <input type="text" id="name-input" name="name" class="newCatName border rounded-md p-1">
                    <br>
                    <label for="catGenre">Catalog Type</label>
                    <br>
                    <input type="text" id="genre_type-input" name="genre_type" class="newCatName border rounded-md p-1">
                    <br>
                    <button class="newCat">Save Catalog</button>
                </form>


            </section>
        </section>
        <section class="searchBooks">
            <form id="exploreBooks">
                <label for="searchBar">
                    Explore the shelves here
                </label>
                <br>
                <input type="search" id="bookGrab" name="searchBar" class="searchBar border rounded-md p-1">
                <br>
                <label for="searchAuthor">Search by Author</label>
                <input type="radio" id="author" name="searchAuthor">
                <label for="searchTitle">Search by Title</label>
                <input type="radio" id="book" name="searchTitle">
                <button onclick="getBooks()">Search</button><br/>
                <section id="output"></section>
            </form>
        </section>

