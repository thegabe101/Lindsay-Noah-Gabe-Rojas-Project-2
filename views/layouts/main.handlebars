        </section>
        <section class="otherNav lg:space-x-8 pr-5 pl-5 ml">
            <a href="/login" class="hover:text-neutral-50 goLogin">Login</a>
            <a href="/signup" class="hover:text-neutral-50 goSignup">Sign Up</a>
            <a href="/about" class="hover:text-neutral-50 goAbout">About</a>
            <a href="/contact" class="hover:text-neutral-50 goContact">Contact</a>
        </section>
        {{/if}}
