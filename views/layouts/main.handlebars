        {{#if logged_in}}
        <section class="navLinks lg:space-x-8 pr-5 pl-5">
            <a href="/login" class="burgLinks hover:text-neutral-50 goLogout">Logout</a>
            <a href="/contact" class="burgLinks hover:text-neutral-50 goContact">Contact</a>
            
